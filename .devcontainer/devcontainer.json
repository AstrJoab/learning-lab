{
  "name": "cpp-python-learning",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {},
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11"
    }
  },
  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y build-essential cmake gdb clang-format && python3 -m pip install --upgrade pip",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-python.python",
        "ms-vscode.cmake-tools"
      ],
      "settings": {
        "C_Cpp.default.cppStandard": "c++20",
        "editor.formatOnSave": true
      }
    }
  }
}
